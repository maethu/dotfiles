# Normal aliases
alias ll='ls -lsah'
alias grep='grep --color'
alias tarx="tar -zxvf"
alias tarc="tar -pczf"
alias rmsvn="find . -name .svn -type d -exec rm -r {} \;"
alias pcp="pwd | pbcopy"


# svn
alias ss="svn st | grep -v '^Performing' | grep -v '^$'"
alias ssm="svn st | grep -v '^Performing' | grep -v '^$' | grep -v '^X'"
export SVN_EDITOR=vim

#python

# git
alias gl="git log --graph"
alias gd="git diff --color"
alias gdf="git diff --color --cached"
alias gdr="git diff --raw --color --cached"
alias gp="git pull --rebase"
alias gco="git checkout"
alias remove_git_branches="git branch --merged master | grep -v 'master$' | xargs git branch -d"

# editor
alias en="subl3 ."
alias es="subl3"

#mail
alias fakemail="work-python ~/bin/fakemail.py --host=localhost --port=8025 --path=/tmp --open"

#simple http
alias http="python -m SimpleHTTPServer"


# postgres
alias pg="postgres -D /usr/local/var/postgres"
